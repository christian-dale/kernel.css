{
    "name": "kernel.css",
    "version": "1.0.0",
    "description": "The CSS framework built for any kind of task",
    "stylintrc": ".stylintrc",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "stylus stylus/theme.styl -o build/kernel.css --prefix ke- --include-css",
        "watch": "stylus -w stylus/theme.styl -o build/kernel.css --prefix ke- --include-css",
        "lint": "stylint stylus",
        "release": "npm run build && npm run minify",
        "minify": "minify ./build/kernel.css > ./build/kernel.min.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/christian-dale/kernel.css.git"
    },
    "keywords": [
        "CSS",
        "framework",
        "simple"
    ],
    "author": "Jim Christian",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/christian-dale/kernel.css/issues"
    },
    "homepage": "https://github.com/christian-dale/kernel.css#readme",
    "dependencies": {
        "minify": "^11.4.0",
        "stylint": "^2.0.0",
        "stylus": "^0.63.0"
    }
}
