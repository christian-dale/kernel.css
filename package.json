{
    "name": "kernel.css",
    "version": "0.6.0",
    "description": "The CSS framework built for any kind of task",
    "stylintrc": ".stylintrc",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "compile": "stylus stylus/theme.styl -o build/kernel.css --prefix krnl- --include-css",
        "compile-noprefix": "npm run compile && node ./scripts/noprefix.js",
        "watch": "stylus -w stylus/theme.styl -o build/kernel.css --include-css",
        "lint": "stylint stylus",
        "release": "npm run compile && node ./scripts/release.js",
        "release-noprefix": "npm run compile-noprefix && node ./scripts/release.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Ionogy/kernel.css.git"
    },
    "keywords": [
        "CSS",
        "framework",
        "simple"
    ],
    "author": "Jim Christian",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Ionogy/kernel.css/issues"
    },
    "homepage": "https://github.com/Ionogy/kernel.css#readme",
    "dependencies": {
        "stylint": "^2.0.0",
        "stylus": "^0.56.0",
        "minifier": "^0.8.1"
    }
}
