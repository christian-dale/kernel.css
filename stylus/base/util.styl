.kernelcss {
    /*
     * kernel.css utility classes.
    */

    .anchor {
    	color: util.anchor-color;
    	text-decoration: none;
    	overflow-wrap: break-word;
    }

    .circle {
    	border-radius: 50%;
    }

    .hr {
    	background-color: util.hr-bg;
    	border: 0;
    	border-radius: 50px;
    	height: 1px;
    	margin-bottom: 25px;
    	margin-top: 25px;
    }

    .section {
    	margin: $main-padding 0;
    }

    .noshadow {
    	box-shadow: none;
    	text-shadow: none;
    }

    .center {
    	margin: auto;
    }

    .vertical-center {
    	position: relative;
    	text-align: center;
    	transform: translateY(-50%);
    	top: 50%;
    }

    .fixed-top {
    	position: fixed;
    	top: 0;
    }

    .fixed-bottom {
    	position: fixed;
    	bottom: 0;
    }

    .ul, .ol {
    	line-height: 1.8;
    }

    .autowrap {
    	overflow-wrap: break-word;
    }

    .block {
        display: block;
    }

    .fullwidth {
        width: 100% !important;
    }

    .halfwidth {
        width: 50% !important;
    }
}

/* For small screen sizes */
@media (max-width: container.width-sm) {
    .kernelcss {
        .halfwidth {
            width: 100% !important;
        }
    }
}
