// ====
// BASE
// ====

base = {
    font-color: #263238,
    font-size: 1em,
    line-height: 1.6
};
base['font'] = 'Segoe UI', 'San Francisco', 'Helvetica Neue', 'Arial', 'sans-serif';

$main-padding = 15px;
$brand-font-size = 1.7em;

container = {
    width: 960px,
    width-sm: 800px
};

util = {
    hr-bg: #eee,
    anchor-color: #0091ea
};

// =======
// GENERIC
// =======

// Buttons
button = {
    bg: #fafafa
};

btn-x2 = {
    bg: #fafafa
};

btn-default = {
    bg: #f5f5f5
};

btn-primary = {
    bg: #00b0ff
};

btn-safe = {
    bg: #2ecc71
};

btn-warning = {
    bg: #ffc400
};

btn-risk = {
    bg: #f44336
};

// Inputs
input = {
    bg: #fff
};

// =======
// MODULES
// =======

nav = {
    border-color: #ccc,
    link-color: #212121,
    mobile-bg: #fff,
    mobile-hover-bg: #eee
};

header = {
    bg: #fff
};

footer = {
    header-bg: linear-gradient(to right, #f5f5f5, #eeeeee),
    header-color: #212121,
    link-color: #2196f3
};

card = {
    bg: #fff
};

alert = {
    bg: #f44336
};

message = {
    bg: #fff
};

code = {
    bg: #fce4ec,
    color: #e91e63,
    block-bg: #f5f5f5,
    block-color: #212121
};

sidebar = {
    icon-color: #fff,
    item-name-color: #fff,
    item-hover-border-color: #448aff
};

table = {
    td-color: #fff,
    td-border-color: #ccc
};

progressbar = {
    bg: #f5f5f5,
    progress-bg: #2196f3,
    progress-color: #fff
};

// Require all the appliction specific styles.

@require 'style';
