// ====
// BASE
// ====

material-icons = {
    "md-18": 18px,
    "md-24": 24px,
    "md-36": 36px,
    "md-48": 48px
};

colors = {
  "red":          #f44336,
  "pink":         #e91e63,
  "purple":       #9c27b0,
  "deep-purple":  #673ab7,
  "indigo":       #3f51b5,
  "blue":         #2196f3,
  "light-blue":   #03a9f4,
  "cyan":         #00bcd4,
  "teal":         #009688,
  "green":        #4caf50,
  "light-green":  #8bc34a,
  "lime":         #cddc39,
  "yellow":       #ffeb3b,
  "amber":        #ffc107,
  "orange":       #ff9800,
  "deep-orange":  #ff5722,
  "brown":        #795548,
  "grey":         #9e9e9e,
  "blue-grey":    #607d8b,

  "black":        #000000,
  "white":        #ffffff,
  "transparent":  transparent
};

base = {
    font-color: #263238,
    font-size: 1em,
    line-height: 1.6
};
base['font'] = 'Segoe UI', 'San Francisco', 'Helvetica Neue', 'Arial', 'sans-serif';

$main-padding = 15px;
$brand-font-size = 1.7em;

container = {
    width: 960px,
    width-sm: 800px
};

util = {
    hr-bg: #eee,
    anchor-color: #0091ea
};

// =======
// GENERIC
// =======

// Buttons
button = {
    bg: #fafafa
};

btn-x2 = {
    bg: #fafafa
};

btn-default = {
    bg: #f5f5f5
};

btn-primary = {
    bg: colors.cyan
};

btn-safe = {
    bg: colors.green
};

btn-warning = {
    bg: colors.yellow
};

btn-risk = {
    bg: colors.red
};

// Inputs
input = {
    bg: #fff
};

// =======
// MODULES
// =======

nav = {
    border-color: #ccc,
    link-color: #212121,
    mobile-bg: #fff,
    mobile-hover-bg: #eee
};

header = {
    bg: #fff,
    border-color: #ccc
};

footer = {
    header-bg: #f5f5f5,
    header-color: #212121,
    link-color: #2196f3
};

card = {
    bg: #fff
};

notice = {
    color: #fafafa,
    bg: #eee,
    safe-bg: colors.green,
    info-bg: colors.cyan,
    alert-bg: colors.red,
    warning-bg: colors.yellow
}

label = notice;

message = {
    bg: #fff
};

code = {
    bg: #fce4ec,
    color: #e91e63,
    block-bg: #f5f5f5,
    block-color: #212121
};

sidebar = {
    icon-color: #fff,
    item-name-color: #fff,
    item-hover-border-color: #448aff
};

table = {
    td-color: #fff,
    td-border-color: #ccc
};

progressbar = {
    bg: #f5f5f5,
    progress-bg: #2196f3,
    progress-color: #fff
};

// Require all the appliction specific styles.

@require 'style';
