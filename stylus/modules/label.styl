.ion-label {
    border: 1px solid #bdbdbd;
    border-radius: 3px;
    color: #bdbdbd;
    display: inline-block;
    font-size: 0.9em;
    font-weight: 600;
    min-width: 95px;
    padding: 5px 7px;
    text-align: center;
    text-decoration: none;

    &.ion-safe {
        border-color: label.safe-bg;
        color: label.safe-bg;
    }

    &.ion-info {
        border-color: label.info-bg;
        color: label.info-bg;
    }

    &.ion-alert {
        border-color: label.alert-bg;
        color: label.alert-bg;
    }

    &.ion-warning {
        border-color: label.warning-bg;
        color: label.warning-bg;
    }
}
