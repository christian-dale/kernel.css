.sidebar {
	box-shadow: 0 1px 4px 0 rgba(0.0, 0, 0, 0.37);
	height: 100vh;
	position: fixed;
	transition: width 100ms cubic-bezier(0.165, 0.840, 0.440, 1.000);
	z-index: 999;
	width: 60px;

	+.splitview-main {
		margin-left: 60px;
	}

    .sidebar-toggle {
        z-index: 999;
        appearance: none;
        width: 1.2em;
        height: 1.2em;
    }

    .sidebar-toggle::after {
        content: "â˜°";
    }

	ul {
		list-style-type: none;
		margin: 0;
		padding: 0;

		li {
			cursor: pointer;
			overflow: hidden;
			text-shadow: 0 1px 4px rgba(0, 0, 0, 0.9);
			transition: all 100ms cubic-bezier(0.165, 0.840, 0.440, 1.000);
			white-space: nowrap;

			.sidebar-toggle, i {
				cursor: pointer;
				text-shadow: 0 1px 4px rgba(0, 0, 0, 0.9);
				color: sidebar.icon-color;
				font-size: 24px;
				line-height: 48px;
				padding-left: 18px;
			}

			img {
				border-radius: 50%;
				box-shadow: 0 1px 4px 0 rgba(0.0, 0, 0, 0.37);
				height: 26px;
				margin: 15px 0 7px 17px;
				width: 26px;
			}

			.item-name {
				color: sidebar.item-name-color;
				display: inline;
				font-weight: normal;
				line-height: 48px;
				margin-left: 20px;
				vertical-align: top;
			}
		}

		li:hover {
			background: rgba(255, 255, 255, 0.07);
			border-left: 3px solid sidebar.item-hover-border-color;
		}
	}
}
