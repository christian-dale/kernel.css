.nav {
    display: inline-block;

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        li {
            display: inline-block;
            transition: border 100ms cubic-bezier(0.165, 0.840, 0.440, 1.000);

            a {
                color: nav.link-color;
                display: block;
                outline: 0;
                padding: 0 15px;
                text-decoration: none;
                text-transform: uppercase;
            }

            &:hover {
                .dropdown {
                    display: block;
                }
            }
        }
    }

    .dropdown {
        background: header.bg;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
        display: none;
        position: absolute;

        ul {
            li {
                display: block;

                &:hover {
                    background-color: #eee;
                }
            }
        }
    }
}
