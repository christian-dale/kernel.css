.kernelcss {
	.code {
		background-color: #fafafa;
		border-radius: 5px;
		color: code.color;
		display: inline-block;
		font-family: monospace;
		line-height: base.line-height;

		&.code-block {
			background-color: code.block-bg;
			box-sizing: border-box;
			color: code.block-color;
			overflow-x: auto;
			padding: 15px;
			white-space: pre-wrap;
			width: 100%;
		}
	}
}
