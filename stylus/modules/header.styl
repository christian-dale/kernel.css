/* The header class is intended for use on the top of the page,
   and not anywhere else. It's usually accompanied by a navigation bar */

.header {
    background-color: header.bg;
    // box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.20);
    display: inline-block;
    height: 60px;
    line-height: 60px;
    width: 100%;
    z-index: 999;

    &.header-xs {
        height: 48px;
        line-height: 48px;
    }

    &.header-sm {
        height: 60px;
        line-height: 60px;
    }

    &.header-md {
        font-size: 1.1em;
        height: 70px;
        line-height: 70px;
    }

    &.header-lg {
        font-size: 1.4em;
        height: 95px;
        line-height: 95px;
    }

    &.header-xl {
        font-size: 1.4em;
        height: 150px;
    }

    .nav-toggle {
        background-color: #eee;
        border-radius: 3px;
        border: 0;
        display: none;
        float: right;
        margin-right: 15px;
        outline: none;
        posit: relative;
        top: 50%;
        transform: translateY(-50%);
    }

    .nav {
       > ul > li:hover {
            border-bottom: 3px solid header.border-color;
        }
    }
}

.menu {
    background-color: rgba(0, 0, 0, 0.95);
    height: 100%;
    position: fixed;
    width: 100%;
    z-index: 100;

    i {
        color: white;
        cursor: pointer;
        font-size: 68px;
        padding: 10px;
        position: absolute;
        right: 0;
        top: 0;
        transition: all 500ms cubic-bezier(0.165, 0.840, 0.440, 1.000);
    }

    i:hover {
        transform: rotate(180deg);
    }

    ul {
        list-style-type: none;
        padding-left: 20px;

        li {
            a {
                color: rgba(255, 255, 255, 0.9);
                font-size: 1.7em;
                text-align: center;
                text-decoration: none;
            }
        }
    }
}

.header-brand {
    float: left;
    font-family: inherit;
    font-size: $brand-font-size;
    padding-left: $main-padding;
}

.header-mobile {
    background-color: #fff;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    overflow-y: auto;
    max-height: 50vh;

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        li {
            display: block;

            a {
                color: nav.link-color;
                display: block;
                font-size: 1.4em;
                padding: 7px 15px;
                text-decoration: none;
                transition: all 100ms cubic-bezier(0.165, 0.84, 0.44, 1);
            }

            a:hover {
                background: nav.mobile-hover-bg;
            }
        }
    }

    .dropdown {
        ul li {
            padding-left: 25px;
        }
    }
}

@media (max-width: container.width-sm) {
    .header {
        .nav {
            display: none;
        }

        .nav-toggle {
            display: inline-block;
        }
    }
}
