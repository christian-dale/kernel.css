.ion-slideshow {
    background: #f5f5f5;
    height: 400px;
    position: relative;
    width: 100%;

    .ion-slide:not(:first-child) {
        display: none;
    }

    .ion-prev, .ion-next {
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        color: #fff;
        position: absolute;
        top: 175px;
        font-size: 3.6em;
        margin: 0 15px;
        user-select: none;
    }

    .ion-prev:hover, .ion-next:hover {
        cursor: pointer;
    }

    .ion-next {
        right: 0;
    }

    img {
        animation: slideshow 1s;
        height: 400px;
        object-fit: cover;
        width: 100%;
    }

    .ion-nav {
        padding: 0;

        li {
            display: inline;
        }
    }
}

@keyframes slideshow {
    from {
        opacity: 0.3;
    }

    to {
        opacity: 1;
    }
}
