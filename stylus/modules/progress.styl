.kernelcss {
    .progressbar {
        background-color: progressbar.bg;
        border-radius: 3px;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
        height: 25px;
        margin: 5px 0;
        width: 100%;

        .progress {
            background-color: progressbar.progress-bg;
            border-radius: 3px;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
            color: progressbar.progress-color;
            height: 25px;
            line-height: 25px;
            max-width: 100%;
            text-align: center;
            white-space: nowrap;
            width: 0;
        }
    }
}
