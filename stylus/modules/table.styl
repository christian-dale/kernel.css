.table {
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;

    thead {
        background-color: #f5f5f5;

        th {
            font-weight: 600;
        }
    }

    tbody {
        tr {
            border-bottom: 1px solid #eee;
        }

        tr:last-child {
            border: 0;
        }
    }

    td,
    th {
        padding: 15px;
        text-align: left;
    }
}
