.ion-button {
    background-color: button.bg;
    border: 0;
    cursor: pointer;
    font-size: 0.85em;
    height: 36px;
    min-width: 95px;
    outline: 0;
    padding: 0 15px;
    text-decoration: none;
    transition: all 300ms cubic-bezier(0.165, 0.84, 0.44, 1);
    text-transform: uppercase;

    &.ion-btn-x2 {
        background-color: btn-x2.bg;
        color: #212121;
        font-size: 1.1em;
        height: 50px;
        line-height: 50px;

      &:hover {
        background-color: darken(btn-x2.bg, 10%);
      }

      &:active {
        transform: scale(0.95);
      }
    }

    &.ion-btn-default {
      background-color: btn-default.bg;
      border-radius: 3px;
      color: rgba(0, 0, 0, 0.8);

      &:hover {
        background-color: darken(btn-default.bg, 10%);
      }

      &:active {
        transform: scale(0.95);
      }
    }

    &.ion-btn-primary {
        background-color: btn-primary.bg;
        border-radius: 3px;
        color: #fff;

      &:hover {
          background-color: darken(btn-primary.bg, 10%);
      }

      &:active {
        transform: scale(0.95);
      }
    }

    &.ion-btn-safe {
        background-color: btn-safe.bg;
        border-radius: 3px;
        color: #fff;

        &:hover {
            background-color: darken(btn-safe.bg, 10%);
        }

        &:active {
            transform: scale(0.95);
        }
    }

    &.ion-btn-warning {
        background-color: btn-warning.bg;
        border-radius: 3px;
        color: #fff;

        &:hover {
            background-color: darken(btn-warning.bg, 10%);
        }

        &:active {
          transform: scale(0.95);
        }
    }

    &.ion-btn-risk {
      background-color: btn-risk.bg;
      border-radius: 3px;
      color: #fff;

      &:hover {
        background-color: darken(btn-risk.bg, 10%);
      }

      &:active {
        transform: scale(0.95);
      }
    }

    &.ion-btn-minimal {
      background-color: transparent;
      color: #2196f3;

      &:hover {
        color: #1e88e5;
      }

      &:active {
        transform: scale(0.95);
      }
    }
}

a.ion-button {
    display: inline-block;
    line-height: 36px;
}
